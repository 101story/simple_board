<div class="container">
  <div class="row">
        <h2>Post List</h2>
    </div>
</div>


<div class="container">
    <div class="text-right">
        <a href='/post/new'><button type="button" class="btn btn-primary btn-sm">글쓰기</button></a>      
    </div>
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">번호</th>
          <th scope="col">제목</th>
          <th scope="col">글쓴이</th>
          <th scope="col">작성일</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |po| %>
        <tr>
          <th scope="row"><%=po.id %></th>
          <td> <a href='/post/show/<%= po.id %>'><%=po.title %></a></td>
          <% if po.user %>
            <td><%=po.user.email %> </td>
          <% else %>
            <td>Anonymous</td>
          <% end %>
          <!--%=((Time.now-po.created_at)/60).round().to_s+ "분전" %-->
          <td><%=time_ago_in_words(po.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>