
<div class="container">
  <div class="row">
        <h2>User List</h2>
    </div>
</div>


<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">번호</th>
          <th scope="col">이메일</th>
          <th scope="col">비밀번호</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"><%=user.id %></th>
          <td> <a href='/post/show/<%=user.id %>'><%=user.email %></a></td>
          <td><%=user.password %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>